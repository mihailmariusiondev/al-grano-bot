{
  "output": {
    "filePath": "repomix-output.xml",
    "style": "xml",
    "removeComments": false,
    "removeEmptyLines": true,
    "topFilesLength": 5,
    "showLineNumbers": false
  },
  "include": [],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      ".gitignore",
      "repomix.config.json",
      ".cursorrules",
      "prompts",
      "LICENSE",
      ".cursor",
      ".taskmasterconfig",
      "cline_mcp_settings.json"
    ]
  },
  "security": {
    "enableSecurityCheck": true
  }
}
